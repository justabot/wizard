{
  "name": "nft-marketplace",
  "version": "1.0.0",
  "description": "NFT Marketplace with Lazy Minting and Royalty Distribution",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy.js --network hardhat",
    "deploy:sepolia": "npx hardhat run scripts/testnet-deploy.js --network sepolia",
    "deploy:polygon": "npx hardhat run scripts/testnet-deploy.js --network polygon_amoy",
    "test-lazy-mint:local": "npx hardhat run scripts/test-lazy-mint.js --network hardhat",
    "test-lazy-mint:sepolia": "npx hardhat run scripts/test-lazy-mint.js --network sepolia",
    "test-lazy-mint:polygon": "npx hardhat run scripts/test-lazy-mint.js --network polygon_amoy",
    "demo-batch:local": "npx hardhat run scripts/demo-batch-minting.js --network hardhat",
    "demo-batch:sepolia": "npx hardhat run scripts/demo-batch-minting.js --network sepolia",
    "demo-batch:polygon": "npx hardhat run scripts/demo-batch-minting.js --network polygon_amoy",
    "test:sepolia": "npx hardhat test test/testnet.test.js --network sepolia",
    "test:polygon": "npx hardhat test test/testnet.test.js --network polygon_amoy",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "verify:polygon": "npx hardhat verify --network polygon_amoy",
    "clean": "npx hardhat clean",
    "node": "npx hardhat node"
  },
  "keywords": [
    "nft",
    "lazy-minting",
    "royalties",
    "ethereum",
    "polygon",
    "hardhat",
    "openzeppelin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "ethereum-waffle": "^4.0.10",
    "chai": "^4.3.10"
  }
}
